import os

os.system("cls")

print("=" * 20)
print("estudo de cndicionais")
print("=" * 20)

numero =float(input("digite um numero"))
resposta = ""
if numero % 2 == 0:
    resposta = f"o numero {numero} é par"
else :
    resposta = f"o numero {numero} é impar"

print("=" * 20)
print (resposta)
print("=" * 20)
